<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior">

    <TableLayout
        android:id="@+id/tableLayout2"
        android:layout_width="365dp"
        android:layout_height="436dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/responseView">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/response1"
                android:layout_width="180dp"
                android:layout_height="171dp"
                android:background="#ffcccccc"
                android:defaultFocusHighlightEnabled="false"
                android:onClick="response1Click"
                android:text="risposta1" />

            <Button
                android:id="@+id/response2"
                android:layout_width="180dp"
                android:layout_height="171dp"
                android:background="#ffcccccc"
                android:onClick="response2Click"
                android:text="Risposta2" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/response3"
                android:layout_width="180dp"
                android:layout_height="171dp"
                android:background="#ffcccccc"
                android:onClick="response3Click"
                android:text="Risposta3" />

            <Button
                android:id="@+id/response4"
                android:layout_width="180dp"
                android:layout_height="171dp"
                android:background="#ffcccccc"
                android:onClick="response4Click"
                android:text="Risposta4" />
        </TableRow>

    </TableLayout>

    <TextView
        android:id="@+id/responseView"
        android:layout_width="369dp"
        android:layout_height="265dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="36dp"
        android:text=""
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>


